CompileScript: <<
	#!/bin/bash -ev
	
	# Compile scripts later on assume Python executable is named "python" - so we give them that
	export PATH=%b:$PATH
	ln -s %p/bin/python2.5 python
	
	# Compiles
	cd source
	make
	cd ../
	
	# Cleans
	rm python
	
	# Corrects install name for modules
	install_name_tool -id %p/lib/python2.5/site-packages/orange/add-ons/Text/_orngTextWrapper.so _orngTextWrapper.so
<<
InstallScript: <<
	#!/bin/bash -ev
	
	# Documentation for orange-text-svn
	mkdir -p %i/share/doc/orange-text-svn/
	cp COPYING LICENSES %i/share/doc/orange-text-svn/
	cp doc/style.css %i/share/doc/orange-text-svn/
	mv doc/widgets/ %i/share/doc/orange-text-svn/
	
	# Documentation for orange-text-svn-py25
	mkdir -p %i/share/doc/orange-text-svn-py25/
	cp COPYING LICENSES %i/share/doc/orange-text-svn-py25/
	mv doc/* %i/share/doc/orange-text-svn-py25/
	
	# Cleans up
	rm -rf COPYING LICENSES doc/ source/ setup.py
	
	# Files for both orange-text-svn and orange-text-svn-py25
	mkdir -p %i/lib/python2.5/site-packages/orange/add-ons/Text/
	mv * %i/lib/python2.5/site-packages/orange/add-ons/Text/
	
	# Installation registration
	echo "orange/add-ons/Text" > %i/lib/python2.5/site-packages/orange-text.pth
	echo "datasetsPath=\"%p/share/doc/orange-text-svn-py25/datasets/\"" > %i/lib/python2.5/site-packages/orange/add-ons/Text/textConfiguration.py
<<
