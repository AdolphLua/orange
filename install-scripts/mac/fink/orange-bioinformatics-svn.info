InstallScript: <<
	#!/bin/bash -ev
	
	# Documentation for orange-bioinformatics-svn
	mkdir -p %i/share/doc/orange-bioinformatics-svn/
	cp COPYING LICENSES %i/share/doc/orange-bioinformatics-svn/
	cp doc/style.css %i/share/doc/orange-bioinformatics-svn/
	mv doc/widgets/ %i/share/doc/orange-bioinformatics-svn/
	
	# Documentation for orange-bioinformatics-svn-py25
	mkdir -p %i/share/doc/orange-bioinformatics-svn-py25/
	cp COPYING LICENSES %i/share/doc/orange-bioinformatics-svn-py25/
	mv doc/* %i/share/doc/orange-bioinformatics-svn-py25/
	
	# Cleans up
	rm -rf COPYING LICENSES doc/ source/ setup.py
	
	# Files for both orange-bioinformatics-svn and orange-bioinformatics-svn-py25
	mkdir -p %i/lib/python2.5/site-packages/orange/add-ons/Bioinformatics/
	mv * %i/lib/python2.5/site-packages/orange/add-ons/Bioinformatics/
	
	# Installation registration
	echo "orange/add-ons/Bioinformatics" > %i/lib/python2.5/site-packages/orange-bioinformatics.pth
<<
