CompileScript: <<
	#!/bin/bash -ev
	
	# Compile scripts later on assume Python executable is named "python" - so we give them that
	export PATH=%b:$PATH
	ln -s %p/bin/python2.5 python
	
	# Compiles
	cd source
	make
	cd ../
	
	# Corrects install name for modules
	install_name_tool -id %p/lib/python2.5/site-packages/orange/add-ons/Bioinformatics/_GOLib.so _GOLib.so
<<
InstallScript: <<
	#!/bin/bash -ev
	
	# Documentation for orange-bioinformatics
	mkdir -p %i/share/doc/orange-bioinformatics/
	cp COPYING LICENSES %i/share/doc/orange-bioinformatics/
	cp doc/style.css %i/share/doc/orange-bioinformatics/
	mv doc/widgets/ %i/share/doc/orange-bioinformatics/
	
	# Documentation for orange-bioinformatics-py25
	mkdir -p %i/share/doc/orange-bioinformatics-py25/
	cp COPYING LICENSES %i/share/doc/orange-bioinformatics-py25/
	mv doc/* %i/share/doc/orange-bioinformatics-py25/
	
	# Cleans up
	rm -rf COPYING LICENSES doc/ source/ setup.py
	
	# Files for both orange-bioinformatics and orange-bioinformatics-py25
	mkdir -p %i/lib/python2.5/site-packages/orange/add-ons/Bioinformatics/
	mv * %i/lib/python2.5/site-packages/orange/add-ons/Bioinformatics/
	
	# Installation registration
	echo "orange/add-ons/Bioinformatics" > %i/lib/python2.5/site-packages/orange-bioinformatics.pth
	echo "datasetsPath=\"%p/share/doc/orange-bioinformatics-py25/data/\"" > %i/lib/python2.5/site-packages/orange/add-ons/Bioinformatics/bioinformaticsConfiguration.py
<<
